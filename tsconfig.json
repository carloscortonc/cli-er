{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": true,
    "noUnusedLocals": true,
    "target": "es6"
  },
  "include": ["src/**/*", "test/**/*"]
}
